<div class="container-fluid">
    <div class="container col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h1>Wills Workouts</h1>
            </div>
        </div>
        <div class="center-fixed form-bg" id="login-container">
            <br>
            <h3>Log In</h3><br>
            <%= form_with url: login_path do |form| %>
                <div class="row">
                    <div class="col-xs-12">
                        <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control form-brand", required: true %></div>
                </div><br>
                <div class="row">
                    <div class="col-xs-12">
                        <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control form-brand", required: true %>
                    </div>
                </div><br>
                <div class="row">
                     <%= submit_tag "Login", class: "btn btn-primary" %>
                </div>
                </div>
            <% end %>
        </div>
    </div>
</div>